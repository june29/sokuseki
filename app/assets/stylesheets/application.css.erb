body {
  background: #fafafa;
}
.header {
  background: #333333;
  display: flex;
  color: #dddddd;
  justify-content: space-between;
  padding: 1em;
}
.header-logo {
  color: #ffffff;
  font-weight: bold;
  width: 130px;
  display: block;
}
.content {
  padding: 0 2em;
  height: 90vh;
}
.before-signed-in {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}
.before-signed-in__content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2px solid #e5e5e5;
  border-bottom-width: 3px;
  padding: 3em 0 0;
  border-radius: 10px;
  background: #ffffff;
}
.before-signed-in__title {
  width: 150px;
  margin-bottom: .2em !important;
}
.before-signed-in__text {
  margin-bottom: 3.5em !important;
}
.before-signed-in__button-area {
  padding: 3.5em 5em;
  border-top: 2px solid #e5e5e5;
  background: #f5f5f5;
  position: relative;
}
.before-signed-in__button-area::before {
  content: url(<%= asset_path "sign-in-user-icon.svg" %>);
  width: 60px;
  height: 60px;
  display: block;
  position: absolute;
  top: -30px;
  left: 50%;
  margin-left: -30px;
}